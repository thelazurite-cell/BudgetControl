      "tagConfig": "src\\products\\budgetapp\\business-logic\\budgetapp-tags.config.ts",
      "testAreaConfig": "src\\products\\budgetapp\\business-logic\\budgetapp-test-area.config.ts",
      "baseLogicFolder": "src\\products\\budgetapp\\business-logic",
      "basePageObjectFolder": "src\\products\\budgetapp\\page-object-models",
      "baseSpecFolder": "src\\products\\budgetapp\\specs",
      "apiSpecFolder": "src\\products\\budgetapp\\specs\\api",
      "browserSpecFolder": "src\\products\\budgetapp\\specs\\browser",
      "baseStepFolder": "src\\products\\budgetapp\\steps",
      "apiStepFolder": "src\\products\\budgetapp\\steps\\api",
      "browserStepFolder": "src\\products\\budgetapp\\steps\\browser",
      "testAreas": [],
      "logicModels": [],
      "variants": [],
      "fallbackVariant": "budgetapp",
      "environments": ["dev"],
      "appConfigFiles": ["config\\budgetapp\\appConfig.budgetapp.dev.json"],
